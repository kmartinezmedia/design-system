{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src/library",
    "paths": {
      "@utils/Events": ["./utils/index.ts"],
      "@designSystem/*": [
        "*"
      ],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "emitDeclarationOnly": true
  },
  "include": [
    "src/library/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.test.ts*"
  ]
}